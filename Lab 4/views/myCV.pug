doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title My CV
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    style.
      body {
        font-family: Verdana;
      }
      .container {
        margin-top: 25px;
      }
      .cv {
        border-radius: 10px;
        padding: 20px;
      }
      .cv-header {
        text-align: center;
      }
      .cv-header h1 {
        color: #333;
      }
      .cv-body ul {
        list-style: none;
        padding: 0;
      }
      .cv-body ul li {
        margin-bottom: 10px;
      }
  body
    .container
      .cv
        .cv-header
          h1 My CV
        .cv-body
          ul
            li
              strong Name:
              |  #{name}
            li
              strong Email:
              |  #{email}
            li
              strong Phone:
              |  #{phone}
            li
              strong Address:
              |  #{address}
            li
              strong Current Institution Name:
              |  #{currentInstitutionName}
            li
              strong Education:
              |  #{education}
            li
              strong About Me:
              |  #{aboutMe}
            li
              strong Skills:
              |  #{skills}
